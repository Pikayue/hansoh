		<script>
		<![CDATA[
			var page=1;
			var rowSize = 10; 
			var sumpage=0;
			var freshTag = 1;//搜索时freshTag=1，列表注入需clear()
			var tableString="";
			var eid="";
			var type=window.getParameter("type");
			var ListID="";
		
			var n_open=false;
	        var cx_open=false;
			$("titlebarid").title="面谈记录";
		
			function init(){
				var name=$("XM").value;	
				var url = "http://hsoa/listjx.jsp";
				var method = "post";
			    var data = "page="+page+"&name="+name;
			    var requestHeader = '{"Content-Type":"application/x-www-form-urlencoded","Accept-Language":"zh-cn"}';
				var isShowProgress = true;
			    var ajax = new Ajax(url,method,data,successFunction,null,requestHeader,isShowProgress);						
			   	ajax.send();
			}
			function successFunction(data)
			{
				var rspData = data.responseText.toJSON();
				var list=rspData.list;
				$("btmdragDaiBan").setDisplay();
				sumpage=rspData.sum;
				tableString=rspData.tableString;
				if(list.length==0)
				{
					$("list").hide();
					$("nodata").show();
					$("btmdragDaiBan").disabled = true;
				}else
				{
					
					$("nodata").hide();
					if(freshTag==1){
						window.scrollTo("top");
						$("list").clear().provide(list).show();
					}else{
						$("list").provide(list).show();
					}
					var toast = new Toast();
	 				toast.setText("第"+page+"/"+sumpage+"页");
	 				toast.setDuration(300);
	 				toast.show();
					$("btmdragDaiBan").disabled = false;
				}	
			}
			function formcallback(response){	                    	
	           alert("请求服务器失败，请检查网络");
	        }
	    function ontimeout(){
					alert("操作超时！");
				}
		function onscrollDaiBan(){
					freshTag = 0;
					setTimeout("downCallbackDaiBan()",10); 
					 
				}
		function downCallbackDaiBan(){
			if(page == sumpage){
				$("btmdragDaiBan").setDisplay();
				//alert("已经是最后一页了!");
				var toast = new Toast();
				toast.setText("已是最后一页");
				toast.setDuration(2000);
				toast.show();
				return;
			}else{
				page = page + 1;
			}
			init();
		}
		function refresh(){
			$("list").hide();
			page =1;
			init();
		}
		
	 	function Dell(delID){
	     
				var url = "http://hsoa/deljx.jsp";
				var method = "post";
			    var data = "ID="+delID;
			    var requestHeader = '{"Content-Type":"application/x-www-form-urlencoded","Accept-Language":"zh-cn"}';
				var isShowProgress = true;
			    var ajax = new Ajax(url,method,data,successdelFunction,null,requestHeader,isShowProgress);						
			   	ajax.send();
		}
		
		function successdelFunction(data)
			{
				alert("删除成功！！",winClose);

			}
		function winClose(){
		  window.open("res:page/listjx.uixml");
		}  
		
		function Edit(delID){
	      
